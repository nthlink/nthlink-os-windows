                      Width="10"
                      Opacity="0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center">
                    <ContentControl Content="{Binding HttpConfuseViewModel}"/>
                </Grid>
                <local:MainPage Feedback="MainPage_Feedback"
