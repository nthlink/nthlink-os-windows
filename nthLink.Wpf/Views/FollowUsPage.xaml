                             Fill="{StaticResource Paint0_Linear_642_184894}"
                             Stretch="Uniform"
                             Width="18" />
                        <TextBlock Style="{StaticResource LocalTextBlock}"
                                    FontSize="15"
Text="Telegram ID :"/>
                        <Button Style="{StaticResource TransparentButton}"
        Click="CopyTelegramIdButton_Click">
                            <StackPanel Orientation="Horizontal">
                               
                                <TextBlock Style="{StaticResource LocalTextBlock}" 
                                            FontSize="15"
           Text="@nthLinkVPN"/>
